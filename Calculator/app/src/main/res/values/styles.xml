<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">5sp</item>
        <item name="android:layout_marginEnd">5sp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="button.operator">
        <item name="android:textColor">@color/operatorColor</item>
    </style>

    <style name="button.landscape">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="button.operator.landscape">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="button.portraitScience">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button.operator.portraitScience">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="buttonScience">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:onClick">onScience</item>
    </style>
</resources>